<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="./css/style.css">

  <title>Registration Page</title>
  <script src="./js/script.js"></script>
</head>

<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-4 col-md-6">
        <div class="card card-registration">
          <div class="card-body p-4">
            <h3 class="card-title">RUET BOOK</h3>
            <form action="/register" method="POST">
              <div class="mb-3">
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-user"></i></span>
                  <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                </div>
              </div>
              <div class="mb-3">
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                  <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                </div>
              </div>
              <div class="mb-3">
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-lock"></i></span>
                  <input type="password" class="form-control" name="pass" id="password" placeholder="Password" required>
                  <i id="password-toggle-icon-1" class="password-toggle-icon fas fa-eye"></i>
                </div>
              </div>
              <div class="mb-3">
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-lock"></i></span>
                  <input type="password" class="form-control" id="confirm-password" placeholder="Confirm Password" required>
                  <i id="password-toggle-icon-2" class="password-toggle-icon fas fa-eye"></i>
                </div>
                <div id="password-error" class="error-message"></div>
              </div>
              <div class="mb-3 text-center">
                <button id="submit" type="submit" class="btn btn-primary btn-block">Sign Up</button>
              </div>
              <div class="mb-3 sign-in-link">
                Already have an account? <a href="/login">Sign In</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>

</html>
