<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <title>Blog Website</title>
</head>
<body>
    <%- include('header', {isLogged}) %>

    <div class="container mt-5">
        <div class="row">
            <% for (var i = 0; i < blogs.length; i++) { %>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="<%= blogs[i].blog_image %>" class="card-img" alt="Blog Image">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title"><%= blogs[i].title %></h5>
                                    <p class="card-text"><%- blogs[i].content.substring(0, 100) + (blogs[i].content.length > 100 ? "..." : "") %></p>
                                    <p class="card-text"><small class="text-muted">- by <i><%= blogs[i].user_name %></i></small></p>
                                    <a href="/blogs/<%= blogs[i].blog_id %>" class="btn btn-primary btn-sm mt-2">Read More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
